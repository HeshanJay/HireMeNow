<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdelete"

    tools:context=".ReadData">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/etnumber"
            android:layout_width="360dp"
            android:layout_height="38dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/input"
            android:fontFamily="@font/acme"
            android:hint="MobileNumber"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/ligtblue" />


        <Button
            android:id="@+id/readdataBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/btncolor"
            android:text="READ "
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:cornerRadius="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:fontFamily="@font/aclonica"
            android:textSize="18dp"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input"
            android:fontFamily="@font/acme"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/ligtblue"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address :"
            android:textSize="18dp"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica"
            />
        <TextView
            android:id="@+id/address"
            android:layout_width="360dp"
            android:gravity="center"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input"
            android:fontFamily="@font/acme"
            android:paddingLeft="20dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/ligtblue"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age :"
            android:fontFamily="@font/aclonica"
            android:textSize="18dp"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/age"
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/input"
            android:fontFamily="@font/acme"
            android:paddingLeft="18dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/ligtblue"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:textSize="18dp"
            android:textColor="@color/purple_700"
            android:fontFamily="@font/aclonica"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/etDate"
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input"
            android:fontFamily="@font/acme"
            android:paddingLeft="20dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/ligtblue"
            android:textSize="18dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number" />

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/btncolor"
            android:text="Delete"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:cornerRadius="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="Cancel"
        android:backgroundTint="@color/btncolor"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        android:layout_marginRight="10dp"/>
        android:layout_marginLeft="10dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/homeBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/my_dimen3"
                android:layout_marginBottom="@dimen/my_dimen3"
                android:layout_weight="0.2"
                app:tint="@color/black"
                app:srcCompat="@drawable/unselected_home" />

            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/searchBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/my_dimen3"
                android:layout_weight="0.2"
                app:tint="@color/black"
                app:srcCompat="@drawable/unselected_applyjob" />

            <ImageView
                android:id="@+id/addBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/my_dimen3"
                android:layout_marginBottom="@dimen/my_dimen3"
                android:layout_weight="0.2"
                app:tint="@color/black"
                app:srcCompat="@drawable/unselected_addjob" />


            <ImageView
                android:id="@+id/viewBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="32dp"
                android:layout_weight="0.2"
                app:tint="@color/black"
                app:srcCompat="@drawable/unselected_helpdesk" />

            <ImageView
                android:id="@+id/updateBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="32dp"
                android:layout_weight="0.2"
                app:tint="@color/black"
                app:srcCompat="@drawable/unselected_account" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>

