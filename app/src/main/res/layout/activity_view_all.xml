<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghalf"
    tools:context=".ViewAll">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/aclonica"
            android:freezesText="false"
            android:gravity="center"
            android:text="View Appointments"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"
            tools:ignore="MissingConstraints">

        </TextView>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center">

        <Button
            android:id="@+id/allEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/btncolor"
            android:text="all"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp">

        </Button>
        <Button
            android:id="@+id/newEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/background"
            android:text="New"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

        </Button>
</androidx.appcompat.widget.LinearLayoutCompat>
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/user_item"
            android:layout_weight="1"/>

        </ScrollView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/homeBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/my_dimen3"
                    android:layout_marginBottom="@dimen/my_dimen3"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/unselected_home"
                    app:tint="@color/black" />

                <ImageView
                    android:id="@+id/searchBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/my_dimen3"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/unselected_applyjob"
                    app:tint="@color/black" />

                <ImageView
                    android:id="@+id/addBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/my_dimen3"
                    android:layout_marginBottom="@dimen/my_dimen3"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/unselected_addjob"
                    app:tint="@color/black" />


                <ImageView
                    android:id="@+id/viewBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/unselected_helpdesk"
                    app:tint="@color/black" />

                <ImageView
                    android:id="@+id/updateBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/unselected_account"
                    app:tint="@color/black" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>