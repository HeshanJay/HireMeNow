<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Job_update">

    <ImageView
        android:id="@+id/update_backimg"
        android:layout_width="433dp"
        android:layout_height="754dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/update_back" />

    <EditText
        android:id="@+id/up_email"
        android:layout_width="409dp"
        android:layout_height="53dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:hint="Email"
        android:textColor="#070707"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/up_name" />

    <EditText
        android:id="@+id/up_phone"
        android:layout_width="414dp"
        android:layout_height="55dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:hint="Contact Number"
        android:textColor="#070707"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_email" />

    <EditText
        android:id="@+id/up_resume"
        android:layout_width="407dp"
        android:layout_height="54dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:hint="Resume"
        android:textColor="#070707"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_phone" />

    <EditText
        android:id="@+id/up_jobtitle"
        android:layout_width="406dp"
        android:layout_height="54dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:hint="Company Name and Job Title"
        android:inputType="textPersonName"
        android:textColor="#070707"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/update_backimg" />

    <EditText
        android:id="@+id/up_name"
        android:layout_width="408dp"
        android:layout_height="53dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:hint="Full Name"
        android:textColor="#070707"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/up_jobtitle" />


    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/border"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="CONFIRM"
        app:layout_constraintBottom_toBottomOf="@+id/update_backimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_resume"
        app:layout_constraintVertical_bias="0.065" />

</androidx.constraintlayout.widget.ConstraintLayout>